<h3>Projects  <a href="#form" class="btn btn-default btn-xs" >
  <span class="glyphicon glyphicon-plus"></span></a>
</h3>
<ul>
  <% projects.each do |project| %>
      <li><%= erb :"project/list_item", locals: {item: project} %></li>
  <% end %>
</ul>

<div id="form">
<h3>Create Project</h3>

<form class="form-horizontal" role="form" action="/projects" method="post">
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="title" placeholder="title" name="title">
    </div>
  </div>
  <div class="form-group">
    <label for="abvr" class="col-sm-2 control-label">Abbreviation</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="abvr" placeholder="abvr" name="abvr">
    </div>
  </div>
  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">Descripion</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="description" placeholder="description" name="description">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">create</button>
    </div>
  </div>
</form>
</div>
